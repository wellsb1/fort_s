<?xml version="1.0"?>
<project name="fort_s" basedir="../" default="build">

	<property name="jar_name" value="forty11-s.jar"/>
	
    <target name="clean" description="Delete all generated files">
        <delete dir="classes"/>
    	<mkdir dir="classes"/>
    	
    	<delete dir="build/dist"/>
    	<mkdir dir="build/dist"/>
    </target>

    <target name="compile" description="Compiles the project">
        <javac srcdir="src" destdir="classes" source="1.6" target="1.6">
        	<classpath>
				<fileset dir="lib">
					<include name="*.jar" />
					<include name="*.zip" />
				</fileset>
			</classpath>
        </javac>
    </target>

    <target name="jar" description="JARs the project">
        <jar destfile="build/dist/${jar_name}" basedir="classes"/>
    </target>
	
	<target name="build">
		<antcall target="clean"/>
		<antcall target="compile"/>
		<antcall target="jar"/>
	</target>
	

</project>
